<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@drawable/border"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_color_pallete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iii"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#ffffff"
            />
        <msi.crool.drawingapp.DrawingView
            android:id="@+id/draw_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF">

        </msi.crool.drawingapp.DrawingView>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_color_pallete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/brush"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_layout">

        <ImageButton
            android:id="@+id/green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#00ff08"
            android:background="#00ff08"
            android:onClick="paintClicked"/>

        <ImageButton
            android:id="@+id/red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#fc0022"
            android:background="#fc0022"
            android:onClick="paintClicked"/>

        <ImageButton
            android:id="@+id/orange"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#de6000"
            android:background="#de6000"
            android:onClick="paintClicked"/>
        <ImageButton
            android:id="@+id/blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#0010f0"
            android:background="#0010f0"
            android:onClick="paintClicked"/>
        <ImageButton
            android:id="@+id/yellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#e9f500"
            android:background="#e9f500"
            android:onClick="paintClicked"/>
        <ImageButton
            android:id="@+id/brown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#c43800"
            android:background="#c43800"
            android:onClick="paintClicked"/>

        <ImageButton
            android:id="@+id/white"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallete"
            android:tag="#FFFFFF"
            android:background="#FFFFFF"
            android:onClick="paintClicked"/>

    </LinearLayout>
    <ImageButton
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/r_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/undo"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallete"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/undo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/r_undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img"
        app:layout_constraintRight_toLeftOf="@+id/redo"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallete"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/redo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/r_redo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/undo"
        app:layout_constraintRight_toLeftOf="@+id/brush"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallete"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/baseline_brush_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/redo"
        app:layout_constraintRight_toLeftOf="@+id/Save"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallete"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/Save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/r_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/brush"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallete"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
